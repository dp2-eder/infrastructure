version: "3.9"

services:
  backend:
    build: ./back-dp2
    env_file:
      - ./back-dp2/.env
    restart: unless-stopped

  frontend:
    build: ./front-dp2
    depends_on:
      - backend
    restart: unless-stopped

  proxy:
    image: nginx:stable
    depends_on:
      - frontend
      - backend
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    ports:
      - "80:80"
